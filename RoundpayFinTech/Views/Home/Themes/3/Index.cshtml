@model RoundpayFinTech.Models.HomeDisplay
@{
    Layout = "~/Views/Shared/Theme/" + ViewData["Theme"] + "/_LayoutHome.cshtml";
}

<!-- Banner Section -->
    <section id="home" class="fullscreen-banner banner p-0 bg-cover bg-pos-rt" data-bg-img="/AvailableThemes/@ViewData["Theme"]/images/bg/01.png" style="height: 241px; background-image: url('/AvailableThemes/@ViewData["Theme"]/images/bg/01.png');">
        <div class="spinner-eff">
            <div class="spinner-circle circle-1"></div>
            <div class="spinner-circle circle-2"></div>
        </div>
        <div class="align-center pt-0">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-md-12 order-lg-1 d-none d-sm-block">

                        <div class="dt-laptop-slider">
                            <div class="laptop-screen">
                                <div id="demo1" class="carousel slide" data-ride="carousel">
                                    <!-- The slideshow -->
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img src="/AvailableThemes/@ViewData["Theme"]/images/icons/1.jpg" alt="Los Angeles">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="/AvailableThemes/@ViewData["Theme"]/images/icons/2.jpg" alt="Chicago">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="/AvailableThemes/@ViewData["Theme"]/images/icons/3.jpg" alt="New York">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="/AvailableThemes/@ViewData["Theme"]/images/icons/4.jpg" alt="New York">
                                        </div>
                                    </div>
                                    <!-- Left and right controls -->
                                    <a class="carousel-control-prev" href="#demo1" data-slide="prev">
                                        <span class="carousel-control-prev-icon"></span>
                                    </a>
                                    <a class="carousel-control-next" href="#demo1" data-slide="next">
                                        <span class="carousel-control-next-icon"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 order-lg-1 md-mt-5">
                        <h1 class="mb-4 wow fadeInUp" style="color: #fff;" data-wow-duration="1.5s">Welcome to Pay2Raj</h1>
                        <p class="lead mb-4 wow fadeInUp" data-wow-duration="2s" data-wow-delay="0.3s">Welcome at Pay2Raj to join a life long business opportunity with us Recharge is stands among best Online Mobile Recharge Service Provider including all major mobile operators and DTH recharge.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

<!--End Banner Section -->
@if (!string.IsNullOrEmpty(Model.FullPage))
{
    <div class="page-content">
        @Html.Raw(Model.FullPage)
    </div>
}
else
{
    
}