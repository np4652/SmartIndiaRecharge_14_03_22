<div id="generic_price_table">
    <section>
        <div class="container">
            <div class="row ">
                <div class="col-md-12">
                    <div class="price-heading clearfix">
                        <h1 class="mt-3">Our Pricing</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row mb-5 justify-content-center">
                @foreach (var item in Model.Slabs)
                {
                    sHTML = string.Empty;
                    var plans = Model.vasUserPackage.Where(x => x.VasPackageID == item.ID);
                    <div class="col-md-3">
                        <div class="generic_content clearfix">
                            <div class="generic_head_price clearfix">
                                @if (plans.Count() > 0)
                                {
                                    @if (@plans.ToList()[0].IsExpired)
                                    {
                                        <div class="box">
                                            <div class="ribbon ribbon-top-right"><span style=" background-color: #e32e16;">Expired</span></div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="">
                                            <div class="ribbon ribbon-top-right"><span>Active</span></div>
                                        </div>
                                    }
                                }
                                <div class="generic_price_tag clearfix">
                                    <img src="../Image/icon/S48.png">
                                </div>
                            </div>
                            <div class="generic_feature_list">
                                <h4>@Html.Raw(item.Slab)</h4>
                                <h5><strong>₹</strong> @Html.Raw(item.PackageCost)</h5>
                                <ul>
                                    <li class="cus-line"><span>@Html.Raw(item.Remark)</span></li>
                                    @foreach (var service in Model.Services)
                                    {
                                        var IsActive = Model.Packages.Any(x => x.ID == item.ID && x.ServiceID == service.ServiceID && x.IsServiceActive == true);
                                        @if (IsActive)
                                        {
                                            var str = string.Empty;
                                            var IschbVOpChActive = Model.Packages.Any(x => x.ID == item.ID && x.ServiceID == service.ServiceID && x.IsActive == true);
                                            str = "<li><span>{Service}{Charges}</span></li>";
                                            str = str.Replace("{Service}", @service.ServiceName);
                                            @if (IschbVOpChActive)
                                            {
                                                str = str.Replace("{Charges}", " @" + service.Charge.ToString() + " /Hit");
                                            }
                                            else
                                            {
                                                str = str.Replace("{Charges}", "");
                                            }
                                            sHTML += str;
                                        }
                                    }
                                    @if (!string.IsNullOrEmpty(sHTML))
                                    {
                                        <span>@Html.Raw(sHTML)</span>
                                    }
                                    <li class="cus-line"><span>Daily Sending Limit - @Html.Raw(item.DailyHitCount)</span></li>
                                    <li class="cus-line"><span>Validity - @Html.Raw(item.ValidityInDays) Days</span></li>
                                </ul>
                            </div>
                            <div class="generic_price_btn clearfix">
                                @if (plans.Count() > 0)
                                {
                                    @if (@plans.ToList()[0].IsExpired)
                                    {
                                        <button type="submit" class="btn-primary btn text-white" id="btn_Renew_@ctr" data-is-pId="@item.ID" href="#">Renew</button>
                                    }
                                    else
                                    {
                                        <button class="btn-primary btn text-white disabled" href="#">Plan Activated</button>
                                    }
                                }
                                else
                                {
                                    <button class="btn-primary btn text-white" id="btn_Buy_@ctr" data-is-pId="@item.ID" href="#">Buy Plan</button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
@section Scripts{
    <script>
        $('button[id^=btn_Buy_],button[id^=btn_Renew_]').click(function () {
            let e = $(this);
            let vPackId = e.data().isPid;
            if (e.html() === 'Buy Plan')
                purchasePlan(vPackId, true);
            else if (e.html() === 'Renew')
                purchasePlan(vPackId, false);
        });

        var purchasePlan = (pId, pActivity) => {
            preloader.load();
            $.post('/vp-buy-plan', { p: pId, a: pActivity }, function (result) {
                resultReload(result);
                an.title = result.statuscode == -1 ? 'Oops' : pActivity ? 'Activated' : 'Renewal is done!';
                an.content = result.msg;
                an.alert(result.statuscode);
                an.autoClose = 5;
                location.reload();
            }).catch(function () {
                console.clear();
            }).fail(function (xhr) {
                if (xhr.status == 500) {
                    an.title = 'Oops';
                    an.content = 'Server error';
                    an.alert(an.type.failed);
                }
                if (xhr.status == 0) {
                    an.title = 'Oops';
                    an.content = 'Internet Connection was broken';
                    an.alert(an.type.failed);
                }
            }).always(function () {
                preloader.remove();
            });
        };
    </script>
