<tr id="_Web">
    <td>1</td>
    @if (Model.ISWebSitePopup)
    {
        <td><div class="text-center"><img class="img-thumbnail" style="width:400px;height:200px" src="@Model.AbsoluteHost/WebPopup.png" alt="no Image" asp-append-version="true" /></div></td>
    }
