        <td><div class="text-center"><img class="img-thumbnail" style="width:400px;height:200px" src="@Model.AbsoluteHost/noimage.png" alt="no Image" asp-append-version="true" /></div></td>
    }

    <td>
        <input type='file' id="dlWebPopup" class="d-none" />
        <label for="dlWebPopup" class="btn btn-secondary btn-sm">Website Popup</label>
    </td>
    @if (Model.ISWebSitePopup)
