<!--Option Modal-->

<div class="col-md-12">
    <button type="button" class="close" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h5 class="text-center text-info font-weight-bold">Add Options</h5>
    <hr />
    
    <div class="container">
        <div class="row">
            <div class="col-md-6">Option Name</div>
            <div class="col-md-6">
                <input type="text" class="form-control" id="OptionName" placeholder="Enter Option Name.." />
                <label id="errmsg1" class="text-danger"></label>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">Display Order</div>
            <div class="col-md-6">
                <input type="number" class="form-control" id="Ind" placeholder="Enter Display Order.." />
                <label id="errmsg2" class="text-danger"></label>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <button class="btn btn-success btn-block" type="button" id="btnsaveOption"> Save</button>
            </div>
            <div class="col-md-6">
                <button id="mdlCancel" class="btn btn-warning btn-block"> Cancel</button>
            </div>
        </div>
    </div>
</div>
<div id="OptionListDiv">

</div>
