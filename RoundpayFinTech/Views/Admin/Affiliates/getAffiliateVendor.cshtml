@{
    ViewData["Title"] = "Affiliate Vendor";
}
<div aria-label="breadcrumb" class="breadcrumb" id="page-header">
    <div class="container-fluid">
        <h5 class="float-left"><i class="fa fa-users"></i> @ViewData["Title"]</h5>
        <ol class="breadcrumb float-right">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item">User Management</li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </div>
</div>

<div id="__p" class="main-temp-body">
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-2">
                <div class="card-header bg-gradientorange text-white line-height-34">
                    <div class="row">
                        <div class="col-sm-10 text-monospace">
                            <i class="fas fa-link"></i>  @ViewData["Title"]
                        </div>
                        <div class="col-sm-2 text-right">
                            <span class="btn btn-sm btn-outline-light pr-2 pl-2" id="btnNew">NEW</span>
                        </div>
                    </div>
                </div>
                <div class="card-body pb-1">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-responsive-sm">
                            <thead class="bg-tableth">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col" style="width:5%">Actions</th>
                                    <th scope="col">Name</th>
                                    <th scope="col" style="width:15%">Status</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

        var _load = function () {
            preloader.load();
            $.post('AffiliatedVendors')
                .done(result => {
                    $('table tbody').html(result);
                    $(".dropdown-toggle").dropdown();
                })
                .fail(xhr => {
                    an.title = 'Oops';
                    an.content = xhr.status == 0 ? 'Internet Connection was broken' : 'Server error';
                    an.alert(an.type.failed);
                })
                .always(() => preloader.remove());
        };

        (() => {
            _load();
            $('#btnNew').click(() => {
                preloader.load();
                $.post('/edit-AffiliateVendor')
                    .done(result => {
                        mdlA.id = "editModel";
                        mdlA.title = "Edit Vendor"
                        mdlA.content = result;
                        mdlA.modal(mdlA.size.default);
                    })
                    .fail(xhr => {
                        an.title = 'Oops';
                        an.content = xhr.status == 0 ? 'Internet Connection was broken' : 'Server error';
                        an.alert(an.type.failed);
                    })
                    .always(() => preloader.remove());
            });
        })();

        console.log('git demo')
    </script>
} 