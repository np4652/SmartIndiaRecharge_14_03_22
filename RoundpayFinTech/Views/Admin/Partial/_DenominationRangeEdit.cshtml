@using Fintech.AppCode.StaticModel;
@model RoundpayFinTech.AppCode.Model.DenominationRange
<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h3>Denomination Range Details</h3>
        <hr />
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="scroll-content">
            <div class="container">
                <div class="form-group">
                    @Html.Label("txtMin", "Min", new { @class = "lbl" })
                    @Html.TextBox("txtMin", Model.Min, new { @type = "number", @class = "form-control text-capitalize", @placeholder = "Enter Min Amount", @tabindex = 1 })
                    <input type="hidden" id="hid" value="@Model.ID" class="d-none" />
                </div>
                <div class="form-group">
                    @Html.Label("txtMax", "Max", new { @class = "lbl" })
                    @Html.TextBox("txtMax", Model.Max, new {@type="number", @class = "form-control", @placeholder = "Enter Maximum Range", @aria_describedby = "txtMaxRangeHelp", @tabindex = 2 })
                </div>

                <div class="form-group">
                    <button type="button" class="btn btn-outline-dark" id="btnErrDetails" tabindex="12">Save Denomination</button>
                </div>
            </div>
        </div>
    </div>
</div>