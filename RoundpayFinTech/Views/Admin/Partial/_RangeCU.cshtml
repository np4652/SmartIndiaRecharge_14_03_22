@using Fintech.AppCode.StaticModel;
@model RoundpayFinTech.AppCode.Model.RangeModel
<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h3>Range Details</h3>
        <hr />
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="scroll-content">
            <div class="container">
                <div class="form-group">
                    @Html.Label("ddlOpType", "Operator Type", new { @class = "lbl" })
                    @{
                        var list = new SelectList(Model.OpTypes, "ID", "OpType");
                    }
                    <select id="ddlOpType" aria-describedby="OpType" tabindex="4" class="custom-select custom-select-md mb3" asp-items="@list" asp-for="@Model.OpTypeId"></select>
                    <small id="errType" class="form-text text-muted d-none"></small>
                </div>
                <div class="form-group">
                    @Html.Label("txtMinRange", "Minimum Range", new { @class = "lbl" })
                    @Html.TextBox("txtMinRange", Model.MinRange, new { @type = "number", @class = "form-control text-capitalize", @placeholder = "Enter Minimum Range", @aria_describedby = "txtMinRangeHelp", @tabindex = 1 })
                    <small id="txtMinRangeHelp" class="form-text text-muted d-none">Minimum Range is mandatory</small>
                    <input type="hidden" id="hid" value="@Model.ID" class="d-none" />
                </div>
                <div class="form-group">
                    @Html.Label("txtMaxRange", "Maximum Range", new { @class = "lbl" })
                    @Html.TextBox("txtMaxRange", Model.MaxRange, new { @type = "number", @class = "form-control", @placeholder = "Enter Maximum Range", @aria_describedby = "txtMaxRangeHelp", @tabindex = 2 })
                    <small id="txtMaxRangeHelp" class="form-text text-muted d-none"></small>
                </div>
                
                <div class="form-group">
                    <button type="button" class="btn btn-outline-dark" id="btnErrDetails" tabindex="12">Save Range Detail</button>
                </div>
            </div>
        </div>
    </div>
</div>