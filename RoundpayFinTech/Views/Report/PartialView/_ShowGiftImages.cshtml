@model IEnumerable<RoundpayFinTech.AppCode.Model.TargetModel>

<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h3>Gift Images</h3>
        <hr />
    </div>
    @if (Model != null)
    {
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="container">
                <ul class="nav nav-pills" role="tablist">
                    @foreach(var item in Model)
                    {
                        <li class="nav-item">
                            <a class="nav-link active mr-1" data-toggle="pill" href="#@item.ServiceName">@item.ServiceName</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="scroll-content">
                <div class="tab-content">
                    @foreach (var item in Model)
                    {
                        <div id="#@item.ServiceName" class="table-responsive container tab-pane active">
                            <img src="@item.ImgaePath"/>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <h1 class="text-danger">Oops! No Gift Found</h1>
    }
</div>
