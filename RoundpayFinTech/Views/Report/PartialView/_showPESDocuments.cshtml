@model IEnumerable<RoundpayFinTech.AppCode.Model.PESApprovedDocument>
@{
    var counter = 0;
    var counter1 = 0;
}
<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h3>PES Document</h3>
        <hr />
    </div>
    @if (Model != null)
    {
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12 col-sm-12">
                    <h6 class="text-muted">Documents</h6>
                    <ul class="list-group">
                        @foreach (var item in Model)
                        {
                            counter += 1;
                            <li class="list-group-item"><i class="fas fa-file text-info mx-2"></i><a target="_blank" href="@item.PESImage">View File @counter</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }

</div>
