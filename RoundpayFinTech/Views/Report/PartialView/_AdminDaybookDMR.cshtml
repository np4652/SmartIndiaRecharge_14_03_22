@model List<RoundpayFinTech.AppCode.Model.DMRDaybook>
@{
    var couter = 1;
}

@if (Model.Count > 0)
{

    foreach (var item in Model)
    {
        <tr>
            <th class="text-right">@couter</th>
            <td class="text-right">@item.TotalHits</td>
            <td class="text-right">@item.TotalAmount</td>
            <td class="text-right">@item.CCF</td>
            <td class="text-right">@item.BaseAmount</td>
            <td class="text-right">@item.Surcharge</td>
            <td class="text-right">@item.GSTOnSurcharge</td>
            <td class="text-right">@item.AmountAfterSurcharge</td>
            <td class="text-right">@item.RefundGST</td>
            <td class="text-right">@item.AmountWithTDS</td>
            <td class="text-right">@item.TDS</td>
            <td class="text-right">@item.CreditedAmount</td>
            <td class="text-right">@item.APISurcharge</td>
            <td class="text-right text-success">@item.APIGSTOnSurcharge</td>
            <td class="text-right text-success">@item.APIAmountAfterSurcharge</td>
            <td class="text-right text-success">@item.APIRefundGST</td>
            <td class="text-right text-success">@item.APIAmountWithTDS</td>
            <td class="text-right text-success">@item.APITDS</td>
            <td class="text-right text-success">@item.APICreditedAmount</td>
            <td class="text-right text-success">@item.TeamCommission</td>
            <td class="text-right @(item.Profit>0?"text-success":"text-danger")">@item.Profit</td>
        </tr>
        couter = couter + 1;
    }
}
else
{
    <tr>
        <td colspan="21" rowspan="2">
            <center>No Record Found</center>
        </td>
    </tr>
}


