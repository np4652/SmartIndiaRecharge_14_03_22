@using RoundpayFinTech.AppCode.Configuration;
@model IEnumerable<RoundpayFinTech.Models.SattlementAccountModels>

@{ var couter = 1; }

@if (Model.Any())
{
    foreach (var item in Model)
    {
<tr data-item-id="@item.RequestID" data-html="@item.Name">
    <td>@couter</td>

    <td>
        @if (item.ApprovalStatus == 1)
        {
            <div class="btn-group dropup">
                <a href="#" id="act1_@couter" class="btn btn-outline-dark btn-sm btn-block dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expaned="false"></a>
                <div class="dropdown-menu" aria-labelledby="act">
                    <h6 class="dropdown-header">Action Menu</h6>

                    <a href="#" id="btnAccept_@couter" class="dropdown-item">Accept</a>
                    <a href="#" id="btnReject_@couter" class="dropdown-item">Reject</a>

                </div>
            </div>
        }
    </td>

    <td class="text-wrap">@item.Name <br><small class="font-weight-bold text-monospace"> [@item.MobileNo]</small></td>
    <td>@item.BankName</td>
    <td>@item.AccountHolder <br> <small class="font-weight-bold text-monospace"> [@item.AccountNumber]</small></td>
    <td>@item.Actualname</td>
    <td>@item.IFSC</td>
    <td>@item.ApprovalText</td>
    @if (ApplicationSetting.IsSattlemntAccountVerify)
    {
        <td>@item.VerificationText</td>
    }
    @{
        var date = Convert.ToDateTime(@item.Requestdate);
        <td class="text-wrap">@date.ToString("dd MMM yyyy")<br>@date.ToString("hh:mm:ss:tt")</td>
    }
</tr>
        couter = couter + 1;
    }
}
else
{
    <tr>
        <td colspan="13" rowspan="2">
            <center>No Record Found</center>
        </td>
    </tr>
}
