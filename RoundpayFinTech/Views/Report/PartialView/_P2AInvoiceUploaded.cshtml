@using RoundpayFinTech.AppCode.Model.ProcModel
@model List<P2AInvoiceListModel>

@{
    var counter = 1;
}

@if (Model != null)
{
    foreach (var item in Model)
    {
        var gstMonth = item.GSTMonth.Substring(3, item.GSTMonth.Length - 3);
        <tr>
            <th class="align-middle">@counter</th>
            <th class="align-middle">@gstMonth)</th>
            <td class="align-middle">@item.OutletName</td>
            <td class="align-middle">@item.MobileNo</td>
            <td class="align-middle">@item.GSTIN</td>
            <td class="align-middle">@item.PAN</td>
            <td class="align-middle">@item.GSTAmount</td>
            <td class="align-middle">
                <a class="md-2 btn btn-outline-info" href="Image/Invoice/@(item.P2AInvoiceURL)" target="_blank">View<i class="fas fa-eye"></i></a>
            </td>
            <td class="align-middle">
                <a class="md-2 btn btn-outline-info" href="Image/Invoice/@(item.P2AInvoiceURL)" target="_blank">View<i class="fas fa-eye"></i></a>
                <a class="md-2 btn btn-outline-info" href="Invoice/P2A?m=@item.MobileNo&mth=@item.GSTMonth" target="_blank">P2A <i class="fas fa-download"></i></a>
            </td>
        </tr>
        counter = counter + 1;
    }
}
else
{
    <tr>
        <td colspan="9" rowspan="2">
            <center>No Record Found</center>
        </td>

    </tr>
}


