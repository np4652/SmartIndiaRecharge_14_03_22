@model IEnumerable<RoundpayFinTech.Models.BannerImage>

@if (Model != null && Model.Count() > 0)
{
    <div id="carouselExampleControls" class="carousel slide mt-4 mb-3" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.ElementAt(i).ResourceUrl" alt="@Model.ElementAt(i).FileName">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.ElementAt(i).ResourceUrl" alt="@Model.ElementAt(i).FileName">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
