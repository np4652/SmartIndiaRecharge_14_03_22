@using RoundpayFinTech.AppCode.Model
@model List<RefundTransaction>

<div class="table-responsive table-sm">
    <table class="table table-hover table-responsive-sm border-bottom-0" id="tbl_W2RRequest">
        <thead class="shadow">
            <tr>
                <th scope="col">#</th>
                <th class="text-center">Actions</th>
                <th>TransactionIDs</th>
                <th scope="col">Outlet</th>
                <th scope="col">TransDate</th>
                <th scope="col">W2RR-Date</th>
                <th scope="col">AccountNo</th>
                <th scope="col">RightAccountNo</th>
                <th scope="col">Operator</th>
                <th scope="col">API</th>
                <th scope="col" class="text-right">Amount</th>
                <th scope="col">VendorID</th>
            </tr>
        </thead>
        <tbody>
            @{var counter = 1; }
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
            <tr data-item-id="@item.TID">
                <th class="align-middle">@counter</th>
                <td class="align-middle">
                    <div class="row  mb-1">
                        <div class="col-md pr-1">
                            <input type="text" id="txtRemark_@counter" class="form-control" name="txtRemark_@counter" value="@item.RefundRemark" placeholder="Enter Remark" title="@item.RefundRemark" data-toggle="tooltip"/>
                        </div>
                    </div>
                    <div class="row mr-0">
                        <div class="col-md-4">
                            <button type="button" class="btn btn-outline-success" title="Accept" data-toggle="tooltip" id="btnAccept_@counter"><i class="far fa-check-circle"></i></button>
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-outline-danger" title="Reject" data-toggle="tooltip" id="btnReject_@counter"><i class="fas fa-times-circle"></i></button>
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-outline-primary" title="Update Narration" data-toggle="tooltip" id="btnUpdate_@counter"><i class="fas fa-comments"></i></button>
                        </div>
                    </div>
                </td>
                <td class="align-middle">@item.TID <small class="font-weight-bold text-monospace"> [@item.TransactionID]</small></td>
                <td class="align-middle">@item.OutletName <small class="font-weight-bold text-monospace"> [@item.OutletMobile]</small></td>
                <td class="align-middle">@item.EntryDate</td>
                <td class="align-middle">@item.RefundRequestDate</td>
                <td class="align-middle"><h5><span class="badge badge-warning" style="cursor:not-allowed">@item.AccountNo</span></h5></td>
                <td class="align-middle"><h5><span class="badge badge-success" style="cursor:copy">@item.RightAccountNo</span></h5></td>
                <td class="align-middle"><span class="badge badge-dark">@item.Operator </span></td>
                <td class="align-middle"><span class="badge badge-dark">@item.APIName </span></td>
                <td class="text-right align-middle">@item.RequestedAmount</td>
                <td class="align-middle">@item.VendorID</td>
            </tr>
                    counter = counter + 1;
                }
            }
            else
            {
                <tr rowspan="2">
                    <td colspan="12">
                        <center>No Record Found</center>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
