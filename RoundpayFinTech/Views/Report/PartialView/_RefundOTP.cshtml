@model RoundpayFinTech.AppCode.DL.RefundRequestResponse
<div class="col-md-12">
    <button type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h3>Fill OTP</h3>
    <div class="form-group">
        @Html.Label("txtOTP", "Fill OTP", new { @class = "lbl" })
        @Html.TextBox("txtOTP", null, new { @class = "form-control text-capitalize", @placeholder = "Enter OTP", @aria_describedby = "OTPHelp", @tabindex = 4 })
        <small id="OTPHelp" class="form-text text-danger  d-none">Invalid OTP</small>
    </div>
    <input type="hidden" id="refTID" value="@(Model != null?Model.TID:0)" />
    <input type="hidden" id="refTrID" value="@(Model != null?Model.TransactionID:string.Empty)" />
    <button class="btn btn-outline-success btn-sm" onclick="VerifyRefundOTP()" id="btnChange">Verify</button>
    <button class="btn btn-outline-primary btn-sm @Html.Raw(Model.IsResendBtnHide ? "d-none" : "")" onclick="ResendRefundOTP()" id="btnResendRefundOTP">Resend</button>
    <button class="btn btn-danger btn-sm" id="mdlCancel">Cancel</button>
</div>