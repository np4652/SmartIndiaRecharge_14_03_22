@model RoundpayFinTech.AppCode.Model.TransactionPGLogDetail
@{
    var _modal = Model.Log;
}
<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close" style="margin-right: 11px;">
            <span aria-hidden="true">&times;</span>
        </button>
        <h6 class="text-monospace">Last Modified : @Html.Raw(!string.IsNullOrEmpty(Model.LastModified) ? "<span class='text-danger'>[" + Model.LastModified + "]<span>" : "")</h6>
        <hr />
    </div>
    <div class="container-fluid">
        <div class="form-horizontal bv-form">
            <div class="form-group row gutter has-feedback">
                <div class="col-md-4">
                    <span>TransactionID</span>
                    <div>
                        <span id="lbltranid" class="text-monospace">@Html.Raw(Model.TransactionID != null ? Model.TransactionID : "")</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <span>VendorID</span>
                    <div>
                        <span class="text-monospace">@Html.Raw(Model.VendorID != null ? Model.VendorID : "")</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <span>TID</span>
                    <div>
                        <span class="text-monospace">@Html.Raw(Model.TID)</span>
                    </div>
                </div>
            </div>
            <hr class="mt-0 mb-0" />
            @if (_modal.Any())
            {
                foreach (var item in _modal)
                {
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <span>Log</span>
                            <label class="float-right text-monospace">Time [<span class="text-danger">@item.EntryDate</span>]</label>
                            <textarea disabled="disabled" class="form-control" rows="3" style="border-style:None;">@item.LOG</textarea>
                            <span>Response</span>
                            <textarea disabled="disabled" class="form-control" rows="3" style="border-style:None;">@item.CheckSum</textarea>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="form-group row">
                    <div class="col-lg-12 text-center">
                        <h5 class="text-info"> No Record Found</h5>
                    </div>
                </div>
            }
        </div>
    </div>
</div>