
@model IEnumerable<RoundpayFinTech.AppCode.Model.AFSlabDetailDisplayLvl>

@{
    var couter = 1;
}
    <table class="table table-bordered">
        <thead class="bg-primary">
            <tr>
                <th>#</th>
                <th>Vendor Name</th>
                <th>Commssion</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {

                    <tr class="tr_bstatus">
                        <td scope="col">@couter</td>
                        <td scope="col">@item.VName
                        <td class="text-center">
                            <div class="row">
                                @foreach (var roleComm in item.RoleCommission)
                                {
                                    <div class="col-md-3 text-nowrap">
                                        <span class="text-monospace"> @(roleComm.Prefix + "[" + (roleComm.CommType == 1 ? "SUR " : "COM ") + roleComm.Comm + "]" + (roleComm.AmtType == 0 ?  " %" : " Fixed") )</span>
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                    couter = couter + 1;
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        <center>No Record Found</center>
                    </td>
                </tr>
            }
        </tbody>
    </table>
