@model RoundpayFinTech.AppCode.Model.ResponseStatus
@{
    Layout = null;
}
@*<div class="logo">
    <img src="/Image/login/logo.png" />
</div>*@
<div class="row">
    <div class="col-sm-12">
        <div style="margin:10%;border:1px solid gray;padding:10px;text-align:center!important">
            <h2 class="text-center">@Html.Raw(Model.CommonStr == "EmailVerification" ? "E-Mail Verification" : "Re-Activate Account")</h2>
            @if (Model.Statuscode == -1)
            {
                <div class="text-danger h4 text-center">@Model.Msg</div>
            }
            else
            {
                <div class="text-success h4 text-center"><span><img class="img-thumbnail" width="30%" src="~/images/checkmarksuccess.gif"/></span><br /> @Model.Msg</div>
            }
            <a href="/Login" class="submit-btn text-center">Log in</a>
        </div>
    </div>
</div>