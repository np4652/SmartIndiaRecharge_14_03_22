                            Alerts('Oops! Internet Connection was broken', AlertStatus.RED);
                        }
                    },
                    error: function (xhr, result) {
                        Alerts(result, AlertStatus.RED);
                    },
                    complete: function () {
                        preloader.remove();
                    }
                });
            };

        </script>
    }
