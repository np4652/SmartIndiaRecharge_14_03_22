@model RoundpayFinTech.AppCode.Model.ResponseStatus
<div class="logo">
    <img src="/Image/login/logo.png" />
</div>
<div class="form-services">
    <div class="form-structor">
        <div class="login">
            <div class="center">
                <h2 class="form-title pb-5">@Html.Raw(Model.CommonStr == "EmailVerification" ? "E-MAil Verification" : "Re-Activate Account")</h2>
                @if (Model.Statuscode == -1)
                {
                    <div class="text-danger text-center h1 "><i class="fa fa-frown-o"></i></div>
                    <div class="text-danger h4 text-center"> @Model.Msg</div>
                }
                else
                {
                    <div class="text-success text-center h1 "><i class="fa fa-smile-o"></i></div>
                    <div class="text-success h4 text-center"> @Model.Msg</div>
                    <script src="~/js/cookie.js"></script>
                    <script>
                        Q.cookie.delete('isBrowserBlock');
                    </script>
                }
                <a href="/Login" class="submit-btn text-center">Log in</a>
            </div>
        </div>
    </div>
</div>