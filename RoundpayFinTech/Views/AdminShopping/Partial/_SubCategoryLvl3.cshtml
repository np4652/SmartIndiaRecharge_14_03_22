@model RoundpayFinTech.AppCode.Model.Shopping.subCategoryModelLvl3
@{
    var subCategories = Model.subCategoryList;
    ViewData["Title"] = "Sub Category [Level-3]";
}
<div id="__p" class="main-temp-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-gradientorange text-white line-height-34">
                        <div class="row">
                            <div class="col-sm-10">
                                <i class="fas fa-link"></i> @ViewData["Title"]
                            </div>
                            <div class="col-sm-2 text-right">
                                <button class="btn btn-sm btn-outline-light pl-2 pr-2 font-bold btnNew" data-Item-id="0"><i class="fa fa-plus"></i> NEW</button>
                                <input type="hidden" value="@Model.SubCategoryID" id="hfPId" />
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-1">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-responsive">
                                    <table class="table table-striped table-condensed">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Action</th>
                                                <th style="width:60%">SubCategory</th>
                                                <th>Group </th>
                                                <th>IsActive</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (subCategories.Any())
                                            {
                                                int Counter = 1;
                                                foreach (var item in subCategories)
                                                {
                                                    <tr data-Parent-Id="@item.SubCategoryIDLvl2" data-Subcategory-Id="@item.SubCategoryIDLvl3">
                                                        <td>@Counter</td>
                                                        <td>
                                                            <div class="btn-group dropup">
                                                                <a href="#" id="act_@Counter" class="btn btn-outline-dark btn-sm btn-block dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expaned="false"></a>
                                                                <div class="dropdown-menu" aria-labelledby="act_@Counter">
                                                                    <h6 class="dropdown-header">Action Menu</h6>
                                                                    <a href="#" class="dropdown-item btnEdit"><span class="fa fa-edit text-success"></span> Edit</a>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>@item.SubCategoryNameLvl3</td>
                                                        <td>@item.GroupName</td>
                                                        <td><input type="checkbox" disabled @Html.Raw(item.IsActive ? "checked='checked'" : "") /></td>
                                                    </tr>
                                                    Counter++;
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="5">No Data Found</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('.dropdown-toggle').dropdown();
    $('.btnNew').unbind().click(() => AddSubCategoryLvl3($('#hfPId').val(), 0));
    $('.btnEdit').unbind().click(e => AddSubCategoryLvl3($(e.currentTarget).closest('tr').data().parentId, $(e.currentTarget).closest('tr').data().subcategoryId));
</script>