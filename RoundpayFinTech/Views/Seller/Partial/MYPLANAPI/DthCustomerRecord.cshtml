@model RoundpayFinTech.AppCode.Model.ROffer.MyPlanDTHCustomerInfo
<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h3>DTH Consumer Info</h3>
        <hr />
    </div>
    @if (Model.status=="true")
    {
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="scroll-content">
            <div class="container">
                <table>
                    <thead>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Balance</td>
                            <td>:</td>
                            <th>@Model.result.records[0].balance</th>
                        </tr>
                        <tr>
                            <td>Customer Name</td>
                            <td>:</td>
                            <th>@Model.result.records[0].customername</th>
                        </tr>
                        <tr>
                            <td>Nest Recharge Date</td>
                            <td>:</td> 
                            <th>@Model.result.records[0].nextrechargedate</th>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td>:</td>
                            <th>@Model.result.records[0].status</th>
                        </tr>
                        <tr>
                            <td>Plan Name</td>
                            <td>:</td>
                            <th>@Model.result.records[0].planname</th>
                        </tr>
                        <tr>
                            <td>Monthly Recharge</td>
                            <td>:</td>
                            <th>@Model.result.records[0].monthlyrecharge</th>
                        </tr>
                        
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    }
    else
    {
    <h2 class="text-danger">Oops! Customer information not availble</h2>
    }
</div>
