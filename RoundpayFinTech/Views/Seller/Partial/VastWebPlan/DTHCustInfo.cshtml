@model RoundpayFinTech.AppCode.Model.ROffer.VastWebDTHCustInfo
<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h3>DTH Consumer Info</h3>
        <hr />
    </div>
    @if (Model.Response != null)
    {
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="scroll-content">
                <div class="container">
                    <table>
                        <thead>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Subscriber Name</td>
                                <td>:</td>
                                <th>@Model.Response.SubscriberName</th>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td>:</td>
                                <th>@Model.Response.address</th>
                            </tr>
                            <tr>
                                <td>State</td>
                                <td>:</td>
                                <th>@Model.Response.State</th>
                            </tr>
                            <tr>
                                <td>Scheme Name</td>
                                <td>:</td>
                                <th>@Model.Response.SchemeName</th>
                            </tr>
                            <tr>
                                <td>Activated On</td>
                                <td>:</td>
                                <th>@Model.Response.ActivatedOn</th>
                            </tr>
                            <tr>
                                <td>Pay Term Name</td>
                                <td>:</td>
                                <th>@Model.Response.PaytermName</th>
                            </tr>
                            <tr>
                                <td>Balance</td>
                                <td>:</td>
                                <th>@Model.Response.SubsBalance</th>
                            </tr>
                            <tr>
                                <td>Status</td>
                                <td>:</td>
                                <th>@Model.Response.StatusName</th>
                            </tr>
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h2 class="text-danger">Oops! Customer information not availble</h2>
    }
</div>
