@{

}

<div class="hot-deal">
    <div class="rokan-product-heading rokan-onsale-heading">
        <h2>Trending <span class="sup-title">Of The Day</span></h2>
    </div>
    <div class="hot-deal-tab-slider hot-deal-tab-slider-customcss">
        @*<div class="countdown_block ml-auto">
                <div class="title_countdown">Hurry Up! Offer ends in:</div>
