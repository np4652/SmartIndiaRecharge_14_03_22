@model RoundpayFinTech.AppCode.Model.Shopping.BannerList
@{
    int counter = 0;
    int maxLength = Model.Banners.Count;
}
<style>
    .banner-slider-top .list-ads1 .item-ads4 {
        margin-bottom: 6px !important;
    }
    .item-ads4.bs-banner {
        width: 100%;
        max-height: 150px;
    }
</style>
@if (Model.Banners.Any())
{
    <div class="content-top-home">
        <div class="top-home-content">
            <div class="container">
                <div class="banner-slider-top row">
                    <div class="col-xs-12 col-sm-8 block_slider">
                        <div id="demo" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ul class="carousel-indicators">
                                @for (int i = 0; i < maxLength; i++)
                                {
                                    @if (i == 0)
                                    {
                                        <li data-target="#demo" data-slide-to="@i" class="active"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#demo" data-slide-to="@i"></li>
                                    }
                                }
                            </ul>

                            <!-- The slideshow -->
                            <div class="carousel-inner">
                                @foreach (var item in Model.Banners)
                                {
                                    string path = "Image/ECommFE/" + item.FileName;
                                    @if (counter == 0)
                                    {
                                        <div class="carousel-item active">
                                            <img src="@path" alt="@item.FileName">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <img src="@path" alt="@item.FileName">
                                        </div>
                                    }
                                    counter++;
                                }
                            </div>

                            <!-- Left and right controls -->
                            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </a>
                            <a class="carousel-control-next" href="#demo" data-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </a>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-4 block_banner">
                        <div>
                            <div class="list-ads1">
                                <div class="row">
                                    @if (Model != null && Model.SideUpper != null)
                                    {
                                        string pathSU = "Image/ECommFE/" + Model.SideUpper.FileName;
                                        <div class="col-md-12 col-sm-12 col-xs-6">
                                            <div class="item-ads4 bs-banner">
                                                <a class="wobble-bottom drop-shadow banner-hover" href="#">
                                                    <img alt="@Model.SideUpper.FileName" src="@pathSU">
                                                </a>
                                            </div>
                                        </div>
                                    }

                                    @if (Model != null && Model.SideLower != null)
                                    {
                                        string pathSL = "Image/ECommFE/" + Model.SideLower.FileName;
                                        <div class="col-md-12 col-sm-12 col-xs-6">
                                            <div class="item-ads4 bs-banner ">
                                                <a class="wobble-bottom drop-shadow banner-hover" href="#">
                                                    <img alt="@Model.SideLower.FileName" src="@pathSL">
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
