@model IEnumerable<RoundpayFinTech.AppCode.Model.Shopping.CategoriesForIndex>
@{

}
<input type="hidden" id="hdnPath" />
<div class="card card-signin flex-row">
    <div class="card-img-left">
        <div class="logo">
            <img src="~/Shopping/img/logo_head1.png" alt="" width="147" height="29">
        </div>
        <h4>Get access to your Orders, Wishlist and Recommendations</h4>
        <a class="cus-signin-btn btn btn-lg btn-primary btn-block text-uppercase">Sign Up</a>
    </div>
    <div class="card-body">
        @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
        <h5 class="card-title text-center">User Login</h5>
        <form class="form-signin ng-untouched ng-pristine ng-invalid" novalidate="">
            <div class="form-group"><input id="txtUser" class="form-control ng-untouched ng-pristine ng-invalid" formcontrolname="LoginID" placeholder="Username" type="email"></div>
            <div class="form-group"><input id="txtPassword" class="form-control ng-untouched ng-pristine ng-invalid" formcontrolname="Password" placeholder="Password" type="password"></div>
            @*<div class="form-group">
                <p class="register-error-msg"></p>
            </div>*@
            <button id="btnLogin" class="btn btn-lg btn-primary btn-block text-uppercase cus-register-btn" style="width: 60%;display: inline-block;" type="button">Login</button>
            <a class="forgetpassLink">Forget Password</a>
        </form>
    </div>
</div>


<script>
    $('#btnLogin').click(() => {
        Login($('#hdnPath').val());
    });
</script>
